<p id="notice"><%= notice %></p>

<h1>Powers</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Description</th>
      <th>Known users</th>
      <th>Limitations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @powers.each do |power| %>
      <tr>
        <td><%= power.category %></td>
        <td><%= power.name %></td>
        <td><%= power.description %></td>
        <td><%= power.known_users %></td>
        <td><%= power.limitations %></td>
        <td><%= link_to 'Show', power %></td>
        <td><%= link_to 'Edit', edit_power_path(power) %></td>
        <td><%= link_to 'Destroy', power, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

