<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Comic</th>
      <th>Power</th>
      <th>First appearance</th>
      <th>Alter ego</th>
      <th>Location</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.comic_id %></td>
        <td><%= character.power_id %></td>
        <td><%= character.first_appearance %></td>
        <td><%= character.alter_ego %></td>
        <td><%= character.location %></td>
        <td><%= character.bio %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

