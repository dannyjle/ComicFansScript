<p id="notice" class="text-center italic"><%= notice %></p>

<h1 class="p-2 mb-5 border-b-2 border-t-2 border-black text-center text-2xl font-bold italic">Characters</h1>

<div class="container flex justify-center">
  <div class="actions mt-5 mb-5 pl-10 pr-10 font-bold text-center text-black bg-yellow-300 rounded border-b-2 border-l-2 border-yellow-500
    hover:bg-gray-800 hover:text-gray-200 hover:border-black shadow"> <%= link_to 'Add New Character', new_character_path %>
  </div>
</div>

<div class="container flex justify-center">
  <ul class="p-5 m-5 bg-gray-300 bg-opacity-90">
    <% @characters.each do  |character| %>
      <li class="border-t-2 border-black font-bold pt-2 pb-2">Name:</li>
      <li class="border-b-2 pl-10 italic"><%= character.name %></li>
      <li class="font-bold pb-2">Comic(s):</li>
      <li class="border-b-2 pl-10 italic"><%= link_to character.comic %></li>
      <li class="font-bold pb-2">Power(s):</li>
      <li class="border-b-2 pl-10 italic"><%= character.power_id %></li> 
      <div class="container flex justify-end border-b-2 border-black pt-5 pb-5">
        <li class="actions font-bold text-black bg-blue-500 pt-1 pb-1 pl-3 pr-3 rounded border-b-2 border-l-2 border-blue-800
		    hover:bg-gray-800 hover:text-gray-200 hover:border-black shadow"> <%= link_to 'more', character %>
        </li>
      </div>
    <% end %> 
  </ul>
</div>
