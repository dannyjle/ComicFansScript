<p id="notice"><%= notice %></p>

<p class="p-2 mb-5 border-b-2 border-t-2 border-black text-center text-2xl font-bold italic"> <%= @comic.name %> </p>


<div class="container flex justify-center p-5 bg-gray-300 bg-opacity-90">
  <ul>
    <li>
      <p class="font-bold p-2">Number:</p>
      <p class="pl-5 italic"> <%= @comic.number %> </p>
    </li>

    <li>
      <p class="font-bold p-2">Volume:</p>
      <p class="pl-5 italic"> <%= @comic.volume %> </p>
    </li>

    <li>
      <p class="font-bold p-2">Publisher:</p>
      <p class="pl-5 italic"> <%= @comic.publisher %> </p>
    </li>

    <li>
      <p class="font-bold p-2">Writer:</p>
      <p class="pl-5 italic"> <%= @comic.writer %> </p>
    </li>


    <li>
      <p class="font-bold p-2">Description:</p>
      <p class="pl-5 italic"> <%= @comic.description %> </p>
    </li>
  </ul>
</div>

<div class="container flex justify-center mb-5 pb-5">
  <div class="actions font-bold mt-5 pl-8 pr-8 text-gray-800 bg-blue-500 rounded border-b-2 border-l-2 border-blue-800
    hover:bg-gray-800 hover:text-gray-200 hover:border-black shadow text-center"> <%= link_to 'â†µ', comics_path %>
  </div>
  <br>
  <div class="actions font-bold mt-5 ml-5 mr-5 pl-5 pr-5 text-gray-800 bg-yellow-300 rounded border-b-2 border-l-2 border-yellow-500
    hover:bg-gray-800 hover:text-gray-200 hover:border-black shadow text-center"> <%= link_to 'Edit', edit_comic_path(@comic) %> 
  </div>
  <br>
  <div class="actions font-bold mt-5 pl-5 pr-5 text-gray-800 bg-red-600 rounded border-b-2 border-l-2 border-red-800
    hover:bg-gray-800 hover:text-gray-200 hover:border-black shadow text-center"> 
    <%= link_to 'Delete', comic_path(@comic.id), method: :delete, data: { confirm: 'Are you sure?' }%>
  </div>  
</div>
