<div class="container flex justify-center bg-gray-300 bg-opacity-90">
  <%= form_with(model: comic) do |form| %>
    <% if comic.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(comic.errors.count, "error") %> prohibited this comic from being saved:</h2>

        <ul>
          <% comic.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="field">
    <p class="font-bold"><%= form.label :name, "Name:"%></p>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <p class="font-bold"><%= form.label :number, "Number:" %></p>
    <%= form.number_field :number %>
  </div>

  <div class="field">
    <p class="font-bold"> <%= form.label :volume, "Volume:" %></p>
    <%= form.number_field :volume %>
  </div>

  <div class="field">
    <p class="font-bold"><%= form.label :publisher, "Punlisher(s):" %></p>
    <%= form.text_field :publisher %>
  </div>

  <div class="field">
    <p class="font-bold"><%= form.label :writer , "Writer(s):" %></p>
    <%= form.text_field :writer %>
  </div>

  <div class="field">
    <p class="font-bold"><%= form.label :description , "Description:" %></p>
    <%= form.text_area :description, size: "40x2" %>
  </div>

  <div class="container flex justify-center">
    <div class="actions">
      <%= form.submit class: "font-bold mt-5 mb-5 p-1 text-gray-800 bg-red-600 rounded border-b-2 border-l-2 border-red-800
      hover:bg-gray-800 hover:text-gray-200 hover:border-black shadow container flex justify-center" %>
    </div>
  </div>

  <% end %>
  
</div>